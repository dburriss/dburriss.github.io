<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AssemblyName>SiteRenderer</AssemblyName>
    <RootNamespace>SiteRenderer</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Models.fs" />
    <Compile Include="WikiLinkExtension.fs" />
    <Compile Include="Parsing.fs" />
    <Compile Include="Layouts.fs" />
    <Compile Include="Feeds.fs" />
    <Compile Include="Search.fs" />
    <Compile Include="Renderer.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Giraffe.ViewEngine" Version="1.4.0" />
    <PackageReference Include="Markdig" Version="0.31.0" />
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="9.0.0" />
    <PackageReference Include="YamlDotNet" Version="15.1.2" />
  </ItemGroup>

  <ItemGroup>
    <Watch Include="../../css/site.css;../../js/theme.js" Exclude="bin/**/*;obj/**/*" />
  </ItemGroup>
</Project>
